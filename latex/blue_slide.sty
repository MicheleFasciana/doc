\renewcommand{\makeslideheading}[1]{%
\large\textbf{\textcolor{\slideheadingcolor}{#1}}}

\newcommand{\heading}[1]{%
\begin{minipage}[t][0.4in]{7in}
\vfil
{\linespread{0.55}
 \large\textbf{\textcolor{\slideheadingcolor}{#1}}
}
\vfil
\end{minipage}
\vskip 5mm}

\newcommand{\supheading}[1]{%
\begin{minipage}[t][0.4in]{7in}
\vfil \vskip 0pt
{\linespread{0.55}
 \Large\textbf{\textcolor{\slideheadingcolor}{#1}}
}
\vfil
\end{minipage}
\vskip 16pt}

\newcommand\makeslidetitle{%
\supheading{\slidetitle}
{\linespread{0.75}
 \vskip -0.145in
 \vbox{%
 \hskip -7pt 
 \hbox{\includegraphics[scale=0.625]{d3d-gyro.80.crop.ps}}
 \vskip -2.8in}
 \large\textbf{\textcolor{black}{\slideauthors}\\}
 \large\textbf{\textcolor{black}{\slideaffil}\\}
 \vfill
 \textcolor{black}{\small Presented at}\\
 \large\textbf{\textcolor{black}{\slidemeetinga}\\}
 \large\textbf{\textcolor{black}{\slidemeetingb}\\}
 \large\textbf{\textcolor{black}{\slidemeetingc}\\}
}}

\newslideframe{header}{%
\boxput(-0.9,0.8){%
 \psframe[linecolor=white,
          fillstyle=gradient,
          gradangle=90,
          gradbegin=gadblue,
          gradend=gablue,
          gradmidpoint=0.5](-1,-0.35)(11.6,1.1)}{#1}
}

\newslideframe{footer}{%
\boxput(-0.9,-0.98){%
 \psframe[linecolor=white,
          fillstyle=gradient,
          gradangle=90,
          gradbegin=gadblue,
          gradend=gablue,
          gradmidpoint=0.5](-1,-0.8)(11.6,-0.05)}{#1}
}

\newslideframe{footernum}{%
\boxput(-1.01,-1.09){%
\makebox[0cm][l]{%
 \scriptsize\textcolor{white}{{\bf \thepage}}}}{#1}}

\newslideframe{footerlogo}{%
\boxput(0.97,-1.08){%
\makebox[0cm][r]{%
 \includegraphics[scale=0.35]{ga-logo-w.eps}}}{#1}}

\newslideframe{center}{%
\boxput(0,0){%
 \psframe[linecolor=white,
          fillstyle=solid](-1,-1)(1,1)}{#1}}

